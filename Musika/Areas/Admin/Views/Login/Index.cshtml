@model Musika.Areas.Admin.AdminModels.Input.InputLogin

@{
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    ViewBag.Title = "Login Page";

    <link href="~/Areas/Admin/content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/content/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Areas/Admin/content/css/animate.css" rel="stylesheet">
    <link href="~/Areas/Admin/content/css/style.css" rel="stylesheet">
    <script src="~/Areas/Admin/content/js/jquery-2.1.1.js"></script>
    <script src="~/Areas/Admin/content/js/bootstrap.min.js"></script>
    Layout = null;           
}


@using (Html.BeginForm())
{
    <body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div style="margin-left: -100px;">
                <h1 class="logo-name">Musika</h1>
            </div>
            <h3>Welcome to Musika</h3>
            @Html.ValidationSummary(true)
                <div class="form-group">
                    <input type="text" name="Email" class="form-control" placeholder="Email" required>
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="Password" required>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert @ViewBag.Type alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong>Error!</strong> @ViewBag.Message
                        </div>
                    }
                </div>            

                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                <a href=@Url.Action("ForgetPassword", "ForgetPassword")><small>Forgot password?</small></a>

                <p class="m-t"> <small>Musika &copy; 2016</small> </p>
            </div>
    </div>
</body>
}