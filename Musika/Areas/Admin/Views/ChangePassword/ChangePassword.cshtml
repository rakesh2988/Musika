@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Password";
}
<h2>Change Password</h2>
<div class="panel panel-inverse" style="visibility: visible; opacity: 1; display: block; transform: translateY(0px);">
    <div class="panel-heading"></div>
    <div class="panel-body no-padding">

        <div class="row">
            <div class="card card-underline">
               
                <div class="card">
                    <div class="card-body">
                        <form id="formPassword" class="form-horizontal floating-label" action="@Url.Action("changepassword", "changepassword")" accept-charset="utf-8" method="post">
                            <div class="row">
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert @ViewBag.Type">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        @ViewBag.Message
                                    </div>
                                }
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Old Password</label>
                                        <div class="col-sm-8">
                                            <input type="password" name="OldPassword" class="form-control validate[required]" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">New Password</label>
                                        <div class="col-sm-8">
                                            <input type="password" id="Password" name="NewPassword" class="form-control validate[required]" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Confirm Password</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control validate[required, equals[Password]]" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-sm-offset-4 col-sm-8 text-right">
                                            <input type="submit" class="btn btn-primary" value="Save" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#formPassword").validationEngine({ promptPosition: "bottomLeft" });
        });
    </script>
}
