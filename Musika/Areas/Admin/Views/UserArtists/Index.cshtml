@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>User Artists</h2>

<div class="panel panel-inverse" style="visibility: visible; opacity: 1; display: block; transform: translateY(0px);">
    <div class="panel-heading"></div>
    <div class="panel-body no-padding">

        <input type="hidden" id="hfSortOrder" value="ASC" />
        <input type="hidden" id="hfSortColumn" value="ArtistName" />
        <input type="hidden" id="hfCurrntPageIndex" />
        <input type="hidden" id="hfTotalCount" />

        <form class="form-horizontal padding20" id="form-search-Artists">
            <div class="form-group">
                <label class="col-md-1 text-right">User Name:</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" data-element="sUserName" />
                </div>

                <label class="col-md-1 text-right">Email:</label>
                <div class="col-md-3">
                    @if (ViewBag.email == null)
                    {
                        <input type="text" class="form-control" data-element="sEmail" />
                    }
                    else
                    {
                        <input type="text" class="form-control" data-element="sEmail" value=@ViewBag.email />
                    }

                </div>

            </div>

            <div class="form-group">
                <label class="col-md-1 text-right">Artist Name:</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" data-element="sArtistName" />
                </div>

                <label class="col-md-1 text-right">Genre Name:</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" data-element="sGenreName" />
                </div>
                <div class="col-sm-offset-1 col-md-3">
                    <input type="button" class="btn btn-inverse" value="Search" id="btnSearch" />
                </div>
            </div>
        </form>


        <table class="table table-striped table-bordered table-hover datatables-example datatable dtr-inline">
            <thead>
                <tr>
                    <th style="cursor: pointer;" onclick="SortData(this);" width="170px">
                        Email
                        <span data-col="Email" class="sort">&nbsp;</span>
                    </th>

                    <th style="cursor: pointer;" width="100px">
                        Artist Image
                    </th>

                    <th style="cursor: pointer;" onclick="SortData(this);" width="270px">
                        Artist Name
                        <span data-col="ArtistName" class="sort">&nbsp;</span>
                    </th>

                    <th style="cursor: pointer;" onclick="SortData(this);" width="170px">
                        Main Genre
                        <span data-col="Main_Genre" class="sort">&nbsp;</span>
                    </th>

                    <th style="cursor: pointer;" onclick="SortData(this);" width="150px">
                        Upcoming Events
                        <span data-col="EventCount" class="sort">&nbsp;</span>
                    </th>

                    <th style="min-width:250px;">Actions</th>
                </tr>
            </thead>
            <tbody id="tbodyArtists"></tbody>
        </table>

        <div class="row padding10">
            <div class="col-md-6" id="page">

            </div>
            <div class="col-md-6">
                <nav class="pull-right">
                    <ul class="pagination" style="margin:0;" id="pagination"></ul>
                </nav>
            </div>
        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit/View Artist</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-10">
                        <form class="form-horizontal" id="form-user">

                            <div class="form-group">
                                <label class="col-md-2 text-right">Name:</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control validate[required]" data-element="UserName" />
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-2" id="imgProfile">
                                    </div>
                                </div>
                            </div>

                        </form>
                        </div>
                    <div id="slider"></div>
                    <div style="clear:both;"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="button" class="btn btn-primary" id="btnSaveChanges" value="Save changes" />
                </div>
            </div>
                </div>
            </div>
    </div>

    @section scripts{
        <script src="~/Areas/Admin/Content/scripts/UserArtists-jquery.js"></script>
    }